---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPosts = Object.values(import.meta.glob('../frammenti/*.md', { eager: true }));
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat().sort())];
const pageTitle = "Tutte le parole";
const title = "Cerca per categoria";
const abstract = "Cerca i frammenti per categoria. Le parole sono raggruppate in base al tema o all'argomento trattato. Clicca su una parola per visualizzare i frammenti associati.";
---
<BaseLayout title={title} abstract={abstract} pageTitle={pageTitle}>
  <div>
    {tags.map((tag) => (
      <p><a href={`/parole/${tag}`}>{tag}</a></p>
    ))}
  </div>
</BaseLayout>